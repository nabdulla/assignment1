            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.nabdullaualberta.buzzergame.MultiPlayerMode" />
        </activity>
        <activity
            android:name=".FourPlayerMode"
            android:label="@string/title_activity_four_player_mode"
            android:parentActivityName=".MultiPlayerMode" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.nabdullaualberta.buzzergame.MultiPlayerMode" />
        </activity>
    </application>

</manifest>
