            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.nabdullaualberta.buzzergame.MultiPlayerMode" />
        </activity>
        <activity
            android:name=".ThreePlayerMode"
            android:label="@string/title_activity_three_player_mode"
