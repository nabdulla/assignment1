            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.nabdullaualberta.buzzergame.MainActivity" />
        </activity>
        <activity
            android:name=".TwoPlayerMode"
            android:label="@string/title_activity_two_player_mode"
